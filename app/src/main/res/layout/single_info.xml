<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:background="@drawable/corners"
        android:layout_margin="10dp"
        android:layout_width="fill_parent"
        android:layout_height="270dp"
        >
        <ImageView
            android:id="@+id/iv_book_icon"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/defaultbook"
            android:scaleType="centerCrop"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_toRightOf="@+id/iv_book_icon"
            android:id="@+id/ll_book_icon"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/iv_book_author"
                android:layout_marginTop="10dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/author"
                />
            <ImageView
                android:id="@+id/iv_book_time"
                android:layout_marginTop="5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/date"
                />
            <ImageView
                android:id="@+id/iv_book_page"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/pages"
                />
            <ImageView
                android:id="@+id/iv_book_publicer"
                android:layout_width="18dp"
                android:layout_marginTop="5dp"
                android:layout_height="18dp"
                android:src="@drawable/printer"
                />
            <ImageView
                android:id="@+id/iv_book_isbn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/isbn"
                />
            <ImageView
                android:id="@+id/iv_book_price"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/price"
                />
            <ImageView
                android:id="@+id/iv_book_score"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/score"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_linearlayout"
            android:layout_toRightOf="@+id/ll_book_icon"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_book_author"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="18dp"
                />
            <TextView
                android:id="@+id/tv_book_time"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="18dp"
                />
            <TextView
                android:id="@+id/tv_book_page"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_book_publicer"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:layout_height="18dp"
                />
            <TextView
                android:id="@+id/tv_book_isbn"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_book_price"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                />
            <TextView
                android:id="@+id/tv_book_score"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_height="18dp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

        <me.next.tagview.TagCloudView
            android:id="@+id/tag_cloud_view"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_linearlayout"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_tagcloudview_black_selector"
            app:tcvItemBorderHorizontal="8dp"
            app:tcvItemBorderVertical="6dp"
            app:tcvBorder="8dp"
            app:tcvTextColor="#123455"
            app:tcvSingleLine="false"
            app:tcvCanTagClick="false"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookinfo"
        android:layout_marginTop="10dp"
        android:minLines="1"
        android:maxLines="3"/>


    <ListView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listview_table"
        android:layout_gravity="center_vertical"
        android:dividerHeight="20dp"
        android:divider="@color/white"
        android:layout_weight="1" />

</LinearLayout>
